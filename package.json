{
  "private": true,
  "name": "road-to-rome",
  "version": "0.0.0",
  "license": "MIT",
  "author": {
    "name": "Eric Chen",
    "email": "airkro@qq.com"
  },
  "scripts": {
    "lint:staged": "nice-move lint staged",
    "prepare": "nice-move git hooks",
    "snapshot": "ava --fail-fast -u -w",
    "start": "nodemon",
    "test": "ava --fail-fast"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.25.7",
    "@bring-it/npm": "^0.5.9",
    "@nice-move/all-in-base": "^0.2.4",
    "ava": "^6.1.3",
    "eslint": "^8.57.1",
    "eslint-plugin-ava": "^14.0.0",
    "garou": "^0.8.0",
    "html-webpack-plugin": "^5.6.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "~5.0.4"
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=20.0.0 || ^16.13.0 || ^18.12.0"
  },
  "eslintConfig": {
    "extends": "@nice-move/eslint-config-base"
  },
  "nice-move": {
    "import-groups": "nice-move-preset",
    "internal-regex": "^@road-to-rome/"
  },
  "nodemonConfig": {
    "delay": 5,
    "exec": "webpack serve",
    "ext": "js,cjs,json",
    "watch": [
      "./packages/**/*",
      "./tools/**/*",
      "webpack.config.cjs"
    ]
  },
  "prettier": "@nice-move/prettier-config"
}
